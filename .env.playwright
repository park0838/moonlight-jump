# Playwright MCP Environment Configuration
# Settings for headless mode and memory optimization

# Force headless mode for all browser launches
PLAYWRIGHT_HEADLESS=true

# Browser launch arguments for memory optimization
PLAYWRIGHT_LAUNCH_ARGS="--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage --disable-gpu --disable-extensions --memory-pressure-off"

# Default browser for MCP operations
PLAYWRIGHT_BROWSER=chromium

# Reduce resource usage
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0
PLAYWRIGHT_BROWSERS_PATH=/usr/local/ms-playwright

# Memory limits
NODE_OPTIONS="--max_old_space_size=4096"

# Performance settings
PLAYWRIGHT_WORKERS=2
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_ACTION_TIMEOUT=10000

# Debug settings (set to false for production)
PLAYWRIGHT_DEBUG=false
PLAYWRIGHT_VIDEO=off
PLAYWRIGHT_SCREENSHOT=only-on-failure

# MCP Server specific settings
MCP_PLAYWRIGHT_HEADLESS=true
MCP_PLAYWRIGHT_MEMORY_LIMIT=2048